{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "background": "#F5F5DC",  
  "width": 1000,
  "height": 400,
  "data": {
    "url": "https://raw.githubusercontent.com/AdrianEngCheeErn/Homework10FIT3179/refs/heads/main/Weighted%20average%20of%20eight%20capital%20cities%2C%20quarterly%20movement%20(%25).csv"
  },
  "params": [
    {
      "name": "Groups_selection",
      "bind": {
        "input": "select",
        "options": [
          null,
          "Food and non-alcoholic beverages",
          "Alcohol and tobacco",
          "Clothing and footwear",
          "Housing",
          "Furnishings, household equipment and services",
          "Health",
          "Transport",
          "Communication",
          "Recreation and culture",
          "Education",
          "Insurance and financial services"
        ],
        "labels": [
          "Show All",
          "Food and non-alcoholic beverages",
          "Alcohol and tobacco",
          "Clothing and footwear",
          "Housing",
          "Furnishings, household equipment and services",
          "Health",
          "Transport",
          "Communication",
          "Recreation and culture",
          "Education",
          "Insurance and financial services"
        ],
        "name": "Group Selection: "
      }
    }
  ],
  "layer": [
    {
      "mark": {
        "type": "bar",
        "color": "#D2B48C"  
      },
      "encoding": {
        "x": {
          "field": "Percentage change from previous quarter",
          "type": "quantitative",
          "title": "Percentage change from previous quarter",
          "axis": {
            "gridColor": "#EED5B7" 
          }
        },
        "y": {
          "field": "Groups",
          "type": "nominal",
          "axis": {
            "labelColor": "#8B4513", 
            "titleColor": "#8B4513"
          }
        },
        "opacity": {
          "condition": {
            "test": "datum.Groups == Groups_selection || Groups_selection == null",
            "value": 1
          },
          "value": 0.2
        },
        "tooltip": [
          { "field": "Percentage change from previous quarter", "type": "quantitative" },
          { "field": "Groups", "type": "nominal" }
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "right",
        "baseline": "middle",
        "dx": 40,
        "dy": 20,
        "color": "#A0522D",  
        "fontSize": 12,
        "fontWeight": "bold"
      },
      "encoding": {
        "x": {
          "aggregate": "max",
          "field": "Percentage change from previous quarter",
          "type": "quantitative",
          "title": "Percentage change from previous quarter"
        },
        "y": {
          "datum": "Clothing and footwear"
        },
        "text": { "value": "Clothing and Footwear has the Highest Percentage Change" }
      }
    }
  ]
}