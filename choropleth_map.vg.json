{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "background": "#FFFAE5",
  "width": 1100,
  "height": 500,
  "projection": {"type": "equalEarth"},
  "layer": [
    {
      "mark": {"type": "geoshape", "stroke": "#000", "strokeWidth": 0.5},
      "data": {"graticule": true}  
    },
    {
      "mark": {"type": "geoshape", "fill": "grey"},
      "data": {
        "url": "https://raw.githubusercontent.com/AdrianEngCheeErn/Homework9FIT3179/refs/heads/main/js/ne_110m_admin_0_countries.topojson",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      }
    },
    {
      "mark": {"type": "geoshape"},
      "data": {
        "url": "https://raw.githubusercontent.com/AdrianEngCheeErn/Homework9FIT3179/refs/heads/main/js/ne_110m_admin_0_countries.topojson",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "transform": [
        {
          "lookup": "properties.NAME",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/AdrianEngCheeErn/Homework9FIT3179/refs/heads/main/data/world-data-2023.csv",
              "format": {"type": "csv"}
            },
            "key": "Country",
            "fields": ["CPI"]
          }
        }
      ],
      "encoding": {
        "color": {
          "condition": {
            "test": "datum.CPI != null",
            "field": "CPI",
            "type": "quantitative",
            "scale": {
              "type": "log",
              "scheme": "reds"
            }
          },
          "value": "#D3D3D3"
        },
        "tooltip": [
          {"field": "properties.NAME", "type": "nominal", "title": "Country"},
          {"field": "CPI", "type": "quantitative", "title": "CPI"}
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "color": "black",
        "fontSize": 16,
        "fontWeight": "bold",
        "align": "left" 
      },
      "encoding": {
        "text": {"value": "Grey = No Data"},
        "x": {"value": 50},  
        "y": {"value": 50}   
      }
    }
  ]
}
