{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "background": "#FFFAE5",
    "width": 400,
    "height": 400,
    "data": {
        "url": "https://raw.githubusercontent.com/AdrianEngCheeErn/Assignment2/refs/heads/main/Rents%2C%20annual%20movement%20(%25)%20(1).csv",
        "format": {
            "type": "csv"
        }
    },
    "transform": [
        {
            "filter": "datum['Rents, annual movement (%)'] == 'Jun-24'"
        },
        {
            "fold": ["Sydney (%)", "Melbourne (%)", "Brisbane (%)", "Adelaide (%)", "Perth (%)", "Australia (%)"],
            "as": ["City", "Percentage Change"]
        },
        {
            "calculate": "datum['Percentage Change'] / 100 * 2 * Math.PI",
            "as": "angle"
        },
        {
            "calculate": "datum['City'] + ' (' + datum['Percentage Change'] + '%)'",
            "as": "label"
        }
    ],
    "mark": "arc",
    "encoding": {
        "theta": {
            "field": "angle",
            "type": "quantitative"
        },
        "color": {
            "field": "City",
            "type": "nominal",
            "scale": {
                "scheme": "category10"
            }
        },
        "tooltip": [
            {
                "field": "City",
                "type": "nominal"
            },
            {
                "field": "Percentage Change",
                "type": "quantitative"
            }
        ]
    }
}